<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUiProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUiProject">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBox x:Name="InputTextBox" Width="200" Margin="10" KeyDown="InputTextBox_KeyDown" />
            <Button x:Name="SubmitButton" Content="Send" Click="SubmitButton_Click" Margin="10"/>
            <TextBlock x:Name="OutputTextBlock" FontSize="24" Margin="10"/>
            <Button Click="TalkWithOllama" Content="Send prompt"/>
        </StackPanel>
    </Grid>
</Window>
